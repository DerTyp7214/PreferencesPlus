<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:key="general"
        android:title="General">
        <com.dertyp7214.preferencesplus.preferences.BottomSheetPreference
            android:defaultValue="1"
            android:entries="@android:array/imProtocols"
            android:entryValues="@android:array/imProtocols"
            android:key="list_preference_1"
            android:title="BottomSheet Preference" />
        <com.dertyp7214.preferencesplus.preferences.ColorPickerPreference
            android:key="color_picker_rgb"
            android:title="ColorPicker Preference"
            app:alphaWhileSelecting="1.0"
            app:colorMode="RGB"
            app:showHex="true" />
        <com.dertyp7214.preferencesplus.preferences.ColorPickerPreference
            android:key="color_picker_argb"
            android:title="ColorPicker Preference"
            app:alphaWhileSelecting=".7"
            app:colorMode="ARGB"
            app:showHex="true" />
        <com.dertyp7214.preferencesplus.preferences.ColorPickerPreference
            android:key="color_picker_hsv"
            android:title="ColorPicker Preference"
            app:alphaWhileSelecting=".3"
            app:colorMode="HSV"
            app:showHex="true" />
        <com.dertyp7214.preferencesplus.preferences.ColorPickerPreference
            android:key="color_picker_hsl"
            android:title="ColorPicker Preference"
            app:alphaWhileSelecting="1.0"
            app:colorMode="HSL"
            app:showHex="true" />
        <com.dertyp7214.preferencesplus.preferences.ColorPickerPreference
            android:key="color_picker_lab"
            android:title="ColorPicker Preference"
            app:alphaWhileSelecting="1.0"
            app:colorMode="LAB"
            app:showHex="true" />
        <com.dertyp7214.preferencesplus.preferences.ColorPickerPreference
            android:key="color_picker_xyz"
            android:title="ColorPicker Preference"
            app:alphaWhileSelecting="1.0"
            app:colorMode="XYZ"
            app:showHex="true" />
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>